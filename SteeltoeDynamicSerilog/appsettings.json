{
  "Logging": {
    "LogLevel": {
      // have to set root logger to verbose/trace for MS config
      "Default": "Trace",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },

  "Serilog": {
    // serilog log levels not needed; all filtering can be done from MS config?
//    "MinimumLevel": {
//      "Default": "Information",
//      "Override": {
//        "Microsoft": "Warning",
//        "Microsoft.Hosting.Lifetime": "Information"
//      }
//    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {SourceContext}: {Properties} {NewLine} {EventId} {Message:lj}{NewLine}{Exception}"
        }
      }
    ]
  },

  "Management": {
    "Endpoints": {
      "Actuator": {
        "Exposure": {
          "Include": [
            "loggers"
          ]
        }
      }
    }
  },

  "AllowedHosts": "*"
}
